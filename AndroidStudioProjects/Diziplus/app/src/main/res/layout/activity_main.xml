<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="268dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="218dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:text="Consumo Combustivel "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="277dp"
            android:layout_height="30dp"
            android:text="Consumo mÃ©dio (km/l)"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="219dp"
            android:layout_height="18dp"
            android:text="Valor dos combustiveis"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gasolina R$" />

            <EditText
                android:id="@+id/valor_um_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint=" 0,00"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Etanol R$" />

            <EditText
                android:id="@+id/valor_dois_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="R$ 0,00"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="consumo gasolina" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="km/l"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Consumo Etanol" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="km/l"
                android:inputType="textPersonName" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/karcula_Button"
        android:layout_width="143dp"
        android:layout_height="73dp"
        android:layout_marginStart="64dp"
        android:text="@string/calcular"
        app:layout_constraintStart_toEndOf="@+id/button3"
        tools:layout_editor_absoluteY="583dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="143dp"
        android:layout_height="74dp"
        android:text="@string/limpar"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="582dp" />

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="49dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

    </LinearLayout>

    <TextView
        android:id="@+id/Combustivel"
        android:layout_width="408dp"
        android:layout_height="224dp"
        android:layout_weight="1"
        android:drawableEnd="@drawable/economiaCombustivel"
        android:text="Combustivel"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>