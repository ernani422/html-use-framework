<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/limpar"
            style="@style/Operators_Button"
            android:text="C" />

        <TextView
            android:id="@+id/divisao"
            style="@style/Operators_Button"
            android:text="/" />s


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numero_7"
            style="@style/Numbers_Button"
            android:text="@string/_7" />

        <TextView
            android:id="@+id/numero_8"
            style="@style/Numbers_Button"
            android:text="@string/_8" />

        <TextView
            android:id="@+id/numero_9"
            style="@style/Numbers_Button"
            android:text="@string/_9" />

        <TextView
            android:id="@+id/multiplicacao"
            style="@style/Operators_Button"
            android:text="@string/x" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numero_4"
            style="@style/Numbers_Button"
            android:text="@string/_4" />

        <TextView
            android:id="@+id/numero_5"
            style="@style/Numbers_Button"
            android:text="@string/_5" />

        <TextView
            android:id="@+id/numero_6"
            style="@style/Numbers_Button"
            android:text="@string/_6" />

        <TextView
            android:id="@+id/subtracao"
            style="@style/Operators_Button"
            android:text="@string/subtracao" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numero_1"
            style="@style/Numbers_Button"
            android:text="@string/_1" />

        <TextView
            android:id="@+id/numero_2"
            style="@style/Numbers_Button"
            android:text="@string/_2" />

        <TextView
            android:id="@+id/numero_3"
            style="@style/Numbers_Button"
            android:text="@string/_3" />

        <TextView
            android:id="@+id/soma"
            style="@style/Operators_Button"
            android:text="@string/soma" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ponto"
            style="@style/Numbers_Button"
            android:text="@string/ponto" />

        <TextView
            android:id="@+id/numerozero"
            style="@style/Numbers_Button"
            android:text="@string/_0" />

        <ImageView
            android:id="@+id/backsp"
            style="@style/Numbers_Button"
            android:src="@drawable/backsp" />

        <TextView
            android:id="@+id/igual"
            style="@style/Operators_Button"
            android:text="@string/igual" />

    </LinearLayout>

</LinearLayout>

